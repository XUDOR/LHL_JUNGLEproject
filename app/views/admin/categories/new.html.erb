<h1>New Category</h1>

<%= form_with(model: [:admin, @category], local: true) do |form| %>
  <div class="field">
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<%= link_to 'Back to Categories', admin_categories_path %>
